+#include "user/user.h"
+#include "kernel/fcntl.h"
+
+int main(int argc, char *argv[])
+{
+    if (argc < 3) {
+        fprintf(2, "Usage: trace <sys_call_number> <command> [<args>...]\n");
+        exit(1);
+    }
+
+    int syscall_number = atoi(argv[1]);
+
+    if (trace(syscall_number) < 0) {
+        fprintf(2, "Failed to trace system call number: %d\n", syscall_number);
+        exit(1);
+    }
+
+    exec(argv[2], &argv[2]);
+
+    fprintf(2, "Exec failed: %s\n", argv[2]);
+    exit(1);
+}
