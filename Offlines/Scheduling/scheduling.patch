+void
+handle_cpu_proc(struct cpu* c, struct proc* p, int time_limit)
+{
+  acquire(&p->lock);
+  int ticks_at_start = p->consumed_timer_ticks;
+  while(p->consumed_timer_ticks - ticks_at_start < time_limit) {
+    p->state = RUNNING;
+    c->proc = p;
+    
+    swtch(&c->context, &p->context);
+    p->consumed_timer_ticks++;
+    p->queue_ticks[p->level]++;
+
+    if(p->state == ZOMBIE) {
+      remove_proc_from_mlfq(&mlfq, p);
+      break;
+    }
+
+    if(p->state == SLEEPING) {
+      promote(&mlfq, p);
+      break;
+    }
+
+    if(p->state == RUNNABLE && p->consumed_timer_ticks - ticks_at_start == time_limit)
+      demote(&mlfq, p);
+  }
+  p->times_scheduled++;
+  p->current_tickets--;
+  c->proc = 0;
+  release(&p->lock);
+}
